<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DateWatchActivity"
    android:background="@color/background">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      android:layout_gravity="center">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bottom"
        android:padding="10dp">
      <TextView
          android:layout_weight="1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:labelFor="@id/showCalendarEvents"
          android:text="@string/show_calendar_events"
          android:textSize="16dp"/>
      <CheckBox
          android:layout_weight="0"
          android:id="@id/showCalendarEvents"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bottom"
        android:padding="10dp">
      <TextView
          android:layout_weight="1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:labelFor="@id/showTextAboveClock"
          android:text="@string/show_text_on_top"
          android:textSize="16dp"/>
      <CheckBox
          android:layout_weight="0"
          android:id="@id/showTextAboveClock"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bottom"
        android:padding="10dp">
      <TextView
          android:layout_weight="1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:labelFor="@id/use24HourClock"
          android:text="@string/use_24_hour_clock"
          android:textSize="16dp"/>
      <CheckBox
          android:layout_weight="0"
          android:id="@id/use24HourClock"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bottom"
        android:padding="10dp">
      <TextView
          android:layout_weight="1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:labelFor="@id/useEdgeTicks"
          android:text="@string/use_edge_ticks"
          android:textSize="16dp"/>
      <CheckBox
          android:layout_weight="0"
          android:id="@id/useEdgeTicks"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"/>
    </LinearLayout>
  </LinearLayout>
</FrameLayout>
